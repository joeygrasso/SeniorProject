<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bmi_application"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="21" />
    
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.example.bmi_application.app.AppController"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/btn_login"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/btn_register"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" />
        <activity
            android:name=".CalculateActivity"
            android:label="@string/btn_Calculate"
            android:launchMode="singleTop" />
        <activity
            android:name=".CompareActivity"
            android:label="@string/btn_Compare"
            android:launchMode="singleTop" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/btn_Settings"
            android:launchMode="singleTop" />
        <activity
            android:name=".TrackChangesActivity"
            android:label="@string/btn_Track"
            android:launchMode="singleTop" />
    </application>

</manifest>
